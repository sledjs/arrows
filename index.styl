@import '~flexstyl/flex'

.sled
  .arrows
    top 0
    width 100%
    height 100%
    position absolute
    flex styl
    align center
    justify between

    .arrow
      border 0
      z-index 2
      margin 1em
      width 2.5em
      height @width

      flex styl
      flex center

      outline none
      cursor pointer
      transition .4s
      background #fff
      border-radius 50%
      box-shadow 0 .1em .2em rgba(#000, .5)
      &:last-child
        margin-left auto

      &:hover
        transition .2s
        background #ddd
        transform scale(1.1)

      &:active
        transition .2s
        transform scale(.9)
